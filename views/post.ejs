<% extend('./layout/layout') %> 

<div class="hex-blog">
  <nav class="breadcrumb pl-0">
    <a class="breadcrumb-item text-primary" href="#">Home</a>
    <a class="breadcrumb-item text-primary" href="#">
      
      <%= newCategory.name %>
      
    </a>
    <span class="breadcrumb-item active"><%= newData.title %></span>
  </nav>
  <div class="row justify-content-center">
    <div class="col-md-9">
      <!-- artical header -->
      <h1 class="text-primary"><%= newData.title %></h1>
      <div class="d-flex flex-row text-secondary small">
        <div class="p-2"><i class="fa fa-user-o" aria-hidden="true"></i> 卡斯伯</div>
        <div class="p-2"><%= moment(newData.updateTime * 1000).format('YYY/MM/DD') %></div>
        <div class="p-2"><i class="fa fa-tag" aria-hidden="true"></i> 
          <a href="" class="text-info">
            
              <%= newCategory.name %> 
            
          </a>
        </div>
      </div>
      <article class="text-dark post mb-4">
        <%- newData.content %>
      </article>
      <!-- 留言 -->
      <div class="card mb-3">
        <div class="card-body">
          <div id="disqus_thread"></div>
            <script>
              (function() { // DON'T EDIT BELOW THIS LINE
              var d = document, s = d.createElement('script');
              s.src = 'https://bu-luo-ge-liu-yan-ban.disqus.com/embed.js';
              s.setAttribute('data-timestamp', +new Date());
              (d.head || d.body).appendChild(s);
              })();
            </script>
            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript> 
        </div>
      </div>
    </div>
  </div>
</div>